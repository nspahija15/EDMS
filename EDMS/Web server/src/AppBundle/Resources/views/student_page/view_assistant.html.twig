{% extends "@App/student_page/index.html.twig" %}


{% block showUser %}

{% endblock %}

{% block navbar %}

    <li><a href="{{ path('redirect_pages') }}">Home</a></li>
    <li class="active"><a href="{{ path('view_assistant_stud') }}">Assistants</a></li>
    <li><a href="{{ path('report_problem_stud') }}">Report a problem</a></li>
    <li><a href="{{ path('view_payments_stud') }}">View Payments</a></li>
    <li><a href="{{ path('show_profile_stud') }}">Profile</a></li>

{% endblock %}

{% block breadcrumb %}
    <li>/<a href="{{ path('redirect_pages') }}">Home</a></li>
    <li class="active">/<a href="{{ path('view_assistant_stud') }}">Assistants</a></li>
{% endblock %}


{% block body %}

    <!-- Latest Users -->




    <h3 class="title-application">Assistants</h3>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Registered Assistants</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>


                {% for row in assistants %}
                    <tr>
                        <td>{{ row.name~" "~row.surname }}</td>
                        <td> {{ row.email }}</td>
                        <td>
                            <div>

                                <a href="{{ path('show_information_stud', {'person': row.id }) }}" class="btn-form btn-sm btn-block btn-primary">Show Info</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}


            </table>
        </div>
    </div>

{% endblock %}






