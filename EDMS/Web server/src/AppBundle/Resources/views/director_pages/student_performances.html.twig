{% extends "@App/director_pages/index.html.twig" %}


{% block showUser %}

{% endblock %}


{% block navbar %}
    <li><a href="{{ path('redirect_pages') }}">Home</a></li>
    <li><a href="{{ path('manage_assistants') }}">Assistants</a></li>
    <li class="active"><a href="{{ path('student_performances') }}">Student Performances</a></li>
    <li><a href="{{ path('technical_problems') }}">Tech Problems</a></li>
    <li><a href="{{ path('applicants_show') }}">Applicants</a></li>
    <li><a href="{{ path('director_show_profile') }}">Profile</a></li>
{% endblock %}


{% block breadcrumb %}
    <li>/<a href="{{ path('redirect_pages') }}">Home</a></li>
    <li class="active">/<a href="{{ path('student_performances') }}">Performances</a></li>
{% endblock %}

{% block page_title %}
    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Student Performances <small>Dorm Management System</small></h1>
{% endblock %}


{% block body %}



    <h3 class="title-application">Student Performances</h3>

    <div class="panel panel-default">
        <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Performances</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Student Name</th>
                    <th>Assistant</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                </tr>


                {% for row in performances %}
                    <tr>
                        <td>{{ row.student }}</td>
                        <td>{{ row.assistant }}</td>
                        <td>{{ row.title }}</td>
                        <td>{{ row.description }}</td>
                        <td>{{ row.dateassigned|date('y-M-d')}}</td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>


{% endblock %}
















